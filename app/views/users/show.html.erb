<div class="container">
  <div class="row col-md-6 middle">
      <div class="text-center">
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, width:"300px", class: "img-responsive center-block" %>
        <% else %>
          <%= image_tag "http://via.placeholder.com/200x200", width:"300px", class: "img-responsive center-block" %>
        <% end %>
      </div>
      <br>
      <br>
      <table class="table table-striped table-condensed table-hover">
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>Information</th>
            <td><%= @user.intro %></td>
          </tr>                  
          <tr>
      </table>
      <% if @user==current_user %>
        <%= link_to 'Edit', edit_user_path, class:"btn btn-primary" %> 
      <% end %>
      <div class="clearfix"></div>
      <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">What I have commented</h3>
        </div>
        <div class="panel-body">
          <% @commented_restaurants.uniq.each do |restaurant| %>
            <%= link_to restaurant_path(restaurant) do %>
              <div class="my-restaurant text-center">
                <% if restaurant.image? %>
                  <%= image_tag restaurant.image, width:"80px",class: "img-responsive center-block" %>
                <% else %>
                  <%= image_tag "http://via.placeholder.com/200x200",width:"60px" , class: "img-responsive center-block" %>
                <% end %>
                <%= restaurant.name %>
              </div>
            <% end %>
          <% end %>
        </div>  
      </div>
  </div>
</div>      