<div class="container">
  <div class="row col-md-6 middle">
      <div col-sm-4></div>
      <div class="text-center">
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, width:"300px", class: "img-responsive center-block" %>
        <% else %>
          <%= image_tag "http://via.placeholder.com/200x200", class: "img-responsive center-block" %>
        <% end %>
      </div>
      <br>
      <br>
      <table class="table table-striped table-condensed table-hover">
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>Information</th>
            <td><%= @user.intro %></td>
          </tr>                  
          <tr>
      </table>

      <%= link_to 'Edit', edit_user_path, class:"btn btn-primary" %> 
  </div>
</div>      